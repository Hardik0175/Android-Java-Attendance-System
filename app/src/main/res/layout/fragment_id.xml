 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.example.hhh.attendancesystemv2.Id"
        android:background="#FFFFFF">

     <LinearLayout
         android:layout_marginTop="50dp"
         android:layout_width="330dp"
         android:layout_height="1dp"
         android:orientation="horizontal"
         android:background="#157E5F"
         android:layout_gravity="center">
     </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Student Shield"
        android:textColor="#157E5F"
        android:textSize="50dp"/>

     <LinearLayout
         android:layout_width="330dp"
         android:layout_height="1dp"
         android:orientation="horizontal"
         android:background="#157E5F"
         android:layout_gravity="center">
     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center">
         <TextView
             android:id="@+id/textView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:gravity="center"
             android:text="SECURED STUDENTS"
             android:textColor="#157E5F"
             android:textSize="17dp"/>

         <ImageView
             android:layout_marginTop="6dp"
             android:layout_marginStart="5dp"
             android:gravity="bottom"
             android:id="@+id/x2"
             android:layout_width="3dp"
             android:layout_height="3dp"
             android:scaleType="fitXY"
             android:src="@drawable/circle"/>

         <TextView
             android:layout_marginStart="5dp"
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:gravity="center"
             android:text="ASSURED PARENTS"
             android:textColor="#157E5F"
             android:textSize="17dp"/>

     </LinearLayout>


    <!--<EditText-->
        <!--android:id="@+id/EditText"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:maxLength="11"-->
        <!--android:background="@drawable/edittextlayout"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:hint="Please insert your ID" />-->

     <android.support.design.widget.TextInputLayout
         android:id="@+id/textInputLayoutName"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/textInputEditTextFirstName"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:backgroundTint="#000000"
             android:hint="Tap Your ID"
             android:inputType="text"
             android:maxLines="1"
             android:textColor="#000000" />

     </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:theme="@style/AppTheme.Button"
        android:text="Upload" />
    <Button
        android:id="@+id/sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:theme="@style/AppTheme.Button"
        android:text="Sync" />

</LinearLayout>
