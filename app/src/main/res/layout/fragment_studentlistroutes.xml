
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.hhh.attendancesystemv2.Studentlistroutes"

    android:background="#ffffff">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout"
        android:background="#ffffff">



        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Route No."
            android:textColor="#157E5F"
            android:textSize="30dp"/>



        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:layout_marginStart="10dp"
            />


        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="Change route" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recyclerview_id"

        android:layout_width="wrap_content"

        android:layout_height="400dp"></android.support.v7.widget.RecyclerView>


    ></RelativeLayout>
